# Django Settings
DEBUG=False
SECRET_KEY=your-prod-secret-key-here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Database
DB_NAME=budget_prod
DB_USER=prod_user
DB_PASSWORD=prod_very_secure_password
DB_HOST=prod-cluster.cluster-xxxxx.region.rds.amazonaws.com
DB_PORT=5432

# Redis/Celery
REDIS_URL=rediss://:password@prod-redis-001.xxxxx.0001.region.cache.amazonaws.com:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-prod-sendgrid-api-key
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=same-origin
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=WARNING

# AWS
AWS_ACCESS_KEY_ID=your-prod-aws-key
AWS_SECRET_ACCESS_KEY=your-prod-aws-secret
AWS_STORAGE_BUCKET_NAME=budget-prod-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# Monitoring & Error Tracking
SENTRY_DSN=your-prod-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Performance
CACHEOPS_ENABLED=True
CACHEOPS_REDIS=redis://cache.yourdomain.com:6379/1

# API Keys
GOOGLE_ANALYTICS_ID=UA-XXXXXX-X
STRIPE_SECRET_KEY=sk_live_xxxx

# Backup Settings
AWS_BACKUP_BUCKET=budget-backups-prod
BACKUP_SCHEDULE=0 3 * * *  # 3 AM daily
