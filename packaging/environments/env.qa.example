# Django Settings
DEBUG=False
SECRET_KEY=your-qa-secret-key-here
ALLOWED_HOSTS=qa.yourdomain.com,qa-budget.yourdomain.com

# Database
DB_NAME=budget_qa
DB_USER=qa_user
DB_PASSWORD=qa_secure_password
DB_HOST=qa-db.yourdomain.com
DB_PORT=5432

# Redis/Celery
REDIS_URL=redis://qa-redis.yourdomain.com:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=qa@yourdomain.com

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO

# AWS
AWS_ACCESS_KEY_ID=your-qa-aws-key
AWS_SECRET_ACCESS_KEY=your-qa-aws-secret
AWS_STORAGE_BUCKET_NAME=budget-qa-bucket
AWS_S3_REGION_NAME=us-east-1

# Monitoring
SENTRY_DSN=your-sentry-dsn-qa
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key-qa
